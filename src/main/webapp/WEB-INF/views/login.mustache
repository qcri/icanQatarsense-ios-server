<div class="container">
	<div class = "login-form">
		<div class = "row">
			<div class = "col-md-3"></div>
			<div class = "col-md-6">
				<h1> QatarSense Login </h1>
				<form role = "form" action="j_spring_security_check" method="post">
					<div class = "form-group">
						<label for="userName"> User Name </label>
						<input type = "text" id = "userName" class="form-control" placeholder = "enter user name" required name="j_username"/>
					</div>
					<div class = "form-group">
						<label for="password"> Password </label>
						<input type = "password" id = "password" class="form-control" placeholder = "enter password"  name="j_password" required/>
					</div>					
					<button type="submit" class = "btn btn-danger" > Login </button>
					<p class="authentication-error"> {{authentication_error}} </p>
				</form>
			</div>
		</div>		
	</div>
</div>
	